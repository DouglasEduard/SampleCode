                <div class="checkbox">
                    @Html.EditorFor(model => model.ProspectivoContatoAcervo)
                    @Html.ValidationMessageFor(model => model.ProspectivoContatoAcervo, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">                
                <button type="submit" name="NovoAtend" value="Create" class="btn btn-default">Registrar</button>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
