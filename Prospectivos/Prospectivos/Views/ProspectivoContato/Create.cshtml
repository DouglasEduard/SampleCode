                <div class="checkbox">
                    @Html.EditorFor(model => model.ProspectivoContatoGestaoEscolas)
                    @Html.ValidationMessageFor(model => model.ProspectivoContatoGestaoEscolas, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProspectivoContatoBiblioteca, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ProspectivoContatoBiblioteca)
                    @Html.ValidationMessageFor(model => model.ProspectivoContatoBiblioteca, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProspectivoContatoCursosLivres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ProspectivoContatoCursosLivres)
                    @Html.ValidationMessageFor(model => model.ProspectivoContatoCursosLivres, "", new { @class = "text-danger" })
