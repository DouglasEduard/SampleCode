@model IEnumerable<Vidly2.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/views/Shared/_Layout.cshtml";
}


<a href="Movies/Create" class="btn btn-primary" role="button">New Movie</a>

@if (!Model.Any())
{
    <text>No one has rented this movie before.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Details", new { id = movie.Id })</td>
                    <td>@movie.Genre.Description</td>                        
                </tr>
            }
        </tbody>
    </table>
}


