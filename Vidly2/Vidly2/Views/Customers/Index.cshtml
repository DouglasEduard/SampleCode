@model IEnumerable<Vidly2.Models.Customer> 

@{
    ViewBag.Title = "Index";
    Layout = "~/views/Shared/_Layout.cshtml";
}

@*
    This is a comment session    
*@

@{
    var classname = Model.Count() > 5 ? "popular" : null;
}

<h2 class="@classname">Customers</h2>


@if (!Model.Any())
{
    <text>No one has rented this movie before.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Discount Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", new { id = customer.Id })</td>
                    <td>@customer.MembershipType.Name</td>
                </tr>                    
            }
        </tbody>
    </table>
}

